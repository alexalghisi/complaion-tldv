# ===========================================
# Complaion tl;dv Integration - Environment Variables
# ===========================================
# Copy this file to .env and fill in your actual values

# ===========================================
# Flask Backend Configuration
# ===========================================
FLASK_ENV=development
SECRET_KEY=your-super-secret-key-change-in-production
HOST=0.0.0.0
PORT=5000
LOG_LEVEL=INFO

# ===========================================
# tl;dv API Configuration
# ===========================================
# Get your API key from tl;dv dashboard
TLDV_API_KEY=your-tldv-api-key-here
TLDV_BASE_URL=https://pasta.tldv.io
TLDV_TIMEOUT=30
TLDV_MAX_RETRIES=3

# ===========================================
# Firebase Configuration
# ===========================================
# Create a Firebase project at https://console.firebase.google.com/
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_STORAGE_BUCKET=your-firebase-project-id.appspot.com
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# Firebase Web App Config (for frontend)
FIREBASE_API_KEY=your-firebase-web-api-key
FIREBASE_AUTH_DOMAIN=your-firebase-project-id.firebaseapp.com
FIREBASE_MESSAGING_SENDER_ID=your-sender-id
FIREBASE_APP_ID=your-app-id

# ===========================================
# Redis Configuration (for job queue)
# ===========================================
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ===========================================
# Application Settings
# ===========================================
MAX_CONCURRENT_JOBS=3
JOB_TIMEOUT_MINUTES=60
RATE_LIMIT_ENABLED=true

# ===========================================
# Frontend Configuration
# ===========================================
REACT_APP_API_URL=http://localhost:5000/api
REACT_APP_FIREBASE_PROJECT_ID=your-firebase-project-id
REACT_APP_FIREBASE_API_KEY=your-firebase-web-api-key
REACT_APP_FIREBASE_AUTH_DOMAIN=your-firebase-project-id.firebaseapp.com
REACT_APP_FIREBASE_STORAGE_BUCKET=your-firebase-project-id.appspot.com

# ===========================================
# Production URLs (for CORS and deployment)
# ===========================================
FRONTEND_URL=https://your-frontend-domain.com
BACKEND_URL=https://your-backend-domain.com

# ===========================================
# Development vs Production
# ===========================================
# For development, keep FLASK_ENV=development
# For production, change to FLASK_ENV=production